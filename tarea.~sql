SELECT DECODE(SEXO, 'HOMBRE', 'H', 'MUJER', 'F', 'NO SE') AS SEXO
FROM ALUMNOS;

SELECT COMPLETO , SUBSTR(COMPLETO,LENGTH(COMPLETO),1) AS ULTIMA_LETRA
FROM(
SELECT INITCAP(NOMBRE||' '||APELLIDO_PATERNO||' '||APELLIDO_MATERNO) COMPLETO
FROM ALUMNOS);

SELECT FECHA_NAC, 
TO_CHAR(FECHA_NAC,'YYYY-MM-DD') FECHA2, 
TO_CHAR(FECHA_NAC,'DAY') DIA_DE_LA_SEMANA,
TO_CHAR(FECHA_NAC,'MONTH') MES,
TO_CHAR(FECHA_NAC,'YYYY') ANO
FROM ALUMNOS;

-- tres columnas donde establezcamos anos, meses y dias de edad.
-- crear otra columna de indice de masa corporal con peso, altura y el imc

SELECT DECODE(MES,1,'ENERO',2,'FEBRERO',3,'MARZO',4,'ABRIL',5,'MAYO',6,'JUNIO',7,'JULIO',8,'AGOSTO',9,'SEPTIEMBRE',10,'OCTUBRE',11,'NOVIEMBRE','DICIEMBRE') AS NOMBRE_MES
FROM(
SELECT TRUNC((((SYSDATE-FECHA_NAC)/365)-TRUNC((SYSDATE-FECHA_NAC)/365))*12.25) AS MES
FROM ALUMNOS);
-- DIAS VIVIDOS
SELECT
     NOMBRE,
     FECHA_NAC,
     TRUNC((SYSDATE-FECHA_NAC)/365) AS ANOS_VIVIDOS,
     TRUNC((((SYSDATE-FECHA_NAC)/365)-TRUNC((SYSDATE-FECHA_NAC)/365))*12.25) AS MESES_VIVIDOS,
     TRUNC((((((SYSDATE-FECHA_NAC)/365)-TRUNC((SYSDATE-FECHA_NAC)/365))*12.25)- TRUNC((((SYSDATE-FECHA_NAC)/365)-TRUNC((SYSDATE-FECHA_NAC)/365))*12.25))*30) AS DIAS_VIVIDOS
FROM ALUMNOS;

SELECT
     a.NOMBRE,
     a.PESO,
     a.ESTATURA,
     a.SEXO
FROM ALUMNOS a;

-- CALCULO DEL IMC
SELECT
     NOMBRE,
     PESO,
     ESTATURA,
     CASE
       WHEN IMC < 18.5 THEN 'BAJO PESO'
       WHEN IMC < 24.9 THEN 'PESO SALUDABLE'
       WHEN IMC < 30 THEN 'SOBREPESO'
     ELSE 'OBESIDAD' END AS CLASIFICACION,
     IMC
FROM (SELECT NOMBRE,PESO,ESTATURA,PESO/(ESTATURA*ESTATURA) AS IMC FROM ALUMNOS);


